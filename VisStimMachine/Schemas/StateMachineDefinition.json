{
    "$id": "h...",
    "$schema": "https://json-schema.org/draft-07/schema",
    "definitions": {
        "visualBaseDefinition": {
            "type": "object",
            "discriminator": {
                "propertyName": "discriminator",
                "mapping": {
                    "GratingsDefinitionType": "#/definitions/gratingsDefinition"
                }
            },
            "x-abstract": true,
            "additionalProperties": false,
            "required": ["discriminator"],
            "properties": {
                "op": {
                    "type": "string"
                },
                "discriminator": {
                    "type": "string"
                }
            }
        },
        "gratingsDefinition": {
            "type": "object",
            "properties": {
                "temporalFrequency": {
                    "type": "number"
                }
            },
            "allOf": [
                {"$ref": "#/definitions/visualBaseDefinition"}
            ]
        },
        "checkerboardDefinition": {
            "type": "object",
            "properties": {
                "spatialFrequency": {
                    "type": "number"
                }
            },
            "allOf": [
                {"$ref": "#/definitions/visualBaseDefinition"}
            ]
        },
        "timerDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["Timer"]
                },
                "dueTime": {
                    "type": "number"
                }
            }
        },
        "waitKeyDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["WaitKey"]
                },
                "keyCode": {
                    "type": "string"
                }
            }
        },
        "stateDefinition": {
            "properties": {
                "alias": {
                    "type": "string"
                },
                "visualStimulus": {
                    "oneOf": [
                        {"$ref": "#/definitions/visualBaseDefinition"},
                        {"type": "null"}
                    ]
                },
                "transitionsOn": {
                    "oneOf": [
                        {"$ref": "#/definitions/timerDefinition"},
                        {"$ref": "#/definitions/waitKeyDefinition"}
                    ]
                },
                "transitionsTo": {
                    "type": "string"
                }
            }
        }
    },
    "properties": {
        "ruleAlias": {
            "description": "The name or alias of this rule",
            "default": "undefined",
            "type": "string"
        },
        "stateDefinitions": {
            "items": {
                "$ref": "#/definitions/stateDefinition"
            },
            "type": "array"
        }
    },
    "title": "StateMachine",
    "type": "object"
}