{
    "$id": "h...",
    "$schema": "https://json-schema.org/draft-07/schema",
    "definitions": {
        "gratingsDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["Grating"]
                },
                "temporalFrequency": {
                    "type": "number"
                }
            }
        },
        "checkerboardDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["Checkerboard"]
                },
                "spatialFrequency": {
                    "type": "number"
                }
            }
        },
        "colorDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["Color"]
                },
                "color": {
                    "$ref": "#/definitions/color"
                }
            }
        },
        "color": {
            "properties": {
                "R": {
                    "type": "number"
                },
                "G": {
                    "type": "number"
                },
                "B": {
                    "type": "number"
                }
            }
        },
        "timerDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["Timer"]
                },
                "dueTime": {
                    "type": "number"
                }
            }
        },
        "waitKeyDefinition": {
            "properties": {
                "name": {
                    "type": "string",
                    "enum": ["WaitKey"]
                },
                "keyCode": {
                    "type": "string"
                }
            }
        },
        "stateDefinition": {
            "properties": {
                "alias": {
                    "type": "string"
                },
                "visualStimulus": {
                    "oneOf": [
                        {"$ref": "#/definitions/colorDefinition"},
                        {"$ref": "#/definitions/gratingsDefinition"},
                        {"$ref": "#/definitions/checkerboardDefinition"}
                    ]
                },
                "transitionsOn": {
                    "oneOf": [
                        {"$ref": "#/definitions/timerDefinition"},
                        {"$ref": "#/definitions/waitKeyDefinition"}
                    ]
                },
                "transitionsTo": {
                    "type": "string"
                }
            }
        }
    },
    "properties": {
        "ruleAlias": {
            "description": "The name or alias of this rule",
            "default": "undefined",
            "type": "string"
        },
        "stateDefinitions": {
            "items": {
                "$ref": "#/definitions/stateDefinition"
            },
            "type": "array"
        }
    },
    "title": "StateMachine",
    "type": "object"
}