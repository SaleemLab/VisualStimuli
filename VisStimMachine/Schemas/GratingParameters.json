{
    "$id": "GratingParameters",
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "GratingParameters",
    "description": "Parameters to configure a BonVision DrawGrating",
    "definitions": {
        "gratingDefinition": {
            "properties": {
                "spatialFrequency": {
                    "type": "number",
                    "minimum": 0
